{
  "getContacts": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/contacts",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.apiKey) %>",
        "Content-Type": "application/json"
      }
    },
    "options": {
      "retryDelay": 500,
      "isOAuth": true
    }
  },
  "filterContacts": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/contacts",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.apiKey) %>",
        "Content-Type": "application/json"
      },
      "query": {
        "mobile": "<%= context.phone %>"
      }
    },
    "options": {
      "retryDelay": 500,
      "isOAuth": true
    }
  },
  "getContactById": {
    "schema": {
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/contacts/<%= context.id %>",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.apiKey) %>",
        "Content-Type": "application/json"
      }
    }
  }
}
